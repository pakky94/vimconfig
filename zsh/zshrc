export ZSH=$HOME"/.oh-my-zsh"
export EDITOR=/usr/bin/nvim
export SUDO_EDITOR=/usr/bin/nvim
export PATH=$PATH:$HOME/.local/bin

ZSH_THEME="agnoster"

plugins=(git vi-mode)

source $ZSH/oh-my-zsh.sh

alias mutt="neomutt"
alias tmux="tmux -2"

source ~/dotfiles/zsh/functionsrc
source ~/dotfiles/zsh/variablesrc
